{{> header}}
{{> userNav}}

  <script>

    setTimeout(function() {
      $('#successMessage').fadeOut('slow');
  }, 1500);

  </script>

  <style> 
    .flashmsg {
      position: fixed;
      right: 15px;
      top: 68px;    
    }
  </style>
  
<section id="main-content"> 
   {{#if storyMessage}}
        <h3 id="successMessage"  class="alert alert-success flashmsg">{{storyMessage}}</h3>
    {{/if}}
      <section class="wrapper">
        <!--overview start-->
        <div class="row">
          <div class="col-lg-12">
            <h3 class="page-header"><i class="fa fa-laptop" ></i>Your Stories :</h3>
            <ol class="breadcrumb">
              {{!-- <li><i class="fa fa-home"></i><a href="#">Home</a></li>
              <li><i class="fa fa-laptop"></i>Dashboard </li>
            </ol> --}}
          </div>
        </div>

        <div class="row">
          <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
            <div class="info-box blue-bg">
              <i class="fa fa-tasks"></i>
              <div class="count">{{storyCount}}</div>
              <div class="title">Total</div>
            </div>
            <!--/.info-box-->
          </div>
          <!--/.col-->
        
          <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
            <div class="info-box brown-bg">
              <i class="fa fa-pencil"></i>
              <a href="/createStory"><div class="count">Create New</div></a>
              <div class="title">Click to create new story !</div>
            </div>
            <!--/.info-box-->
          </div>
          <!--/.col-->
        </div>


      
       <div class="row">
          <div class="col-lg-12">
            <section class="panel">
              <header class="panel-heading">
                My Stories
              </header>

              <table class="table table-striped table-advance table-hover">
                <tbody>
                  <tr>
                    <th><i class="fa fa-tasks"  aria-hidden="true"></i> Story</th>
                    <th><i class="fa fa-bullhorn" aria-hidden="true"></i> Type</th>
                    <th><i class="fa fa-thumbs-up">&nbsp;</i>Like</th>
                    <th><i class="fa fa-comment" aria-hidden="true"></i> Comments</th>
                    <th><i class="icon_cogs"></i> Action</th>
                  </tr>
                  {{#each myStory}}
                  <tr>                   
                    <td>{{storyText}}</td>
                    <td>{{type }}</td>
                    <td id="testText" >{{likes}}</td>
                    <td><a href="/mystorycomment/{{_id}}">{{commentCount}}</a></td>
                    <td>
                      <div class="btn-group">
                        <a class="btn btn-primary" href="/updateStory/{{_id}}"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                        {{!-- <button  class="btn btn-danger ; fa fa-trash-o" aria-hidden="true" onclick="myFunction()"></button> --}}
                        <a class="btn btn-danger" href="/deleteStory/{{_id}}"><i  class="fa fa-trash-o" aria-hidden="true"></i></a>

                      </div>
                    </td>
                    
                  </tr>
                  {{/each}}
                 
                </tbody>
              </table>
              
            </section>
          </div>
        </div>
        
     
    </section>
  {{> footer}}