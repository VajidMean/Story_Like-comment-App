        <div class="col-lg-6">
            <section class="panel">
              <header class="panel-heading">
                New Story
              </header>
              <div class="panel-body">
                <form role="form" method="POST" action="/newStory">
                  <div class="form-group">
                    <label for="exampleInputEmail1">StoryText</label>
                    <input type="text" class="form-control" id="exampleInputEmail1" name="storyText" placeholder="Enter Story">
                    <input type="text" id="exampleInputEmail1"  value="{{user._id}}" name="userID" hidden>
                    <input type="text" id="creatorName"  value="{{user.username}}" name="creatorName" hidden>
                  </div>
                  <div class="checkbox">
                    <label>
                    {{!-- <input type='hidden' value='public' name="checkbox"> --}}
                    <input type="checkbox" value="private" name="checkbox" > Private</label>
                  </div>
                  <button type="submit" class="btn btn-primary">Publish</button>
                  <a href="/mystory"><button type="button"  class="btn btn-danger">Cancel</button></a>
                </form>
                
              </div>
            </section>
          </div>

    </section>
