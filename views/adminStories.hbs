{{> header}}
    <!--sidebar start-->
{{> adminNav}}
    <!--sidebar end-->

    <!--main content start-->
    <!--main content start-->
    <section id="main-content">
      <section class="wrapper">
        <div class="row">
          <div class="col-lg-12">
            <h3 class="page-header"><i class="far fa-bullseye"></i> Stories</h3>
            <ol class="breadcrumb">
              {{!-- <li><i class="fa fa-home"></i><a href="index.html">Home</a></li>
              <li><i class="fa fa-table"></i>Table</li>
              <li><i class="fa fa-th-list"></i>Basic Table</li> --}}
            </ol>
          </div>
        </div>
        <div class="row">

          <div class="col-sm-6">
            <div class="info-box blue-bg">
              <i class="far fa-bullseye"></i>
              <div class="count"> Private Story&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;{{privateCount}}</div>
              <div class="title">Total Private Story</div>
            </div>
            <!--/.info-box-->
          </div>

          <div class="col-sm-6">
            <div class="info-box green-bg">
              <i class="far fa-bullseye"></i>
              <div class="count">Public Story&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;{{publicCount}}</div>
              <div class="title">Total Public Story</div>
            </div>
            <!--/.info-box-->
          </div>
        
        </div>
        <!-- page start-->
        <div class="row">
          <div class="col-sm-6">
            <section class="panel">
              <header class="panel-heading">
                Private Stories
              </header>
              <table class="table">
                <thead>
                  <tr>
                    <th>Story</th>
                    <th>Creator</th>
                    <th>Likes</th>
                    <th>Comments</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                  {{#each privateStories}}
                  <tr>
                    <td>{{storyText}}</td>
                    <td>{{_creatorName}}</td>
                    <td><li class="fa fa-thumbs-up"></li> {{likes}}</td>
                    <td><i class="fa fa-comment" aria-hidden="true"></i> 0</td>
                    <td><a class="btn btn-danger" href="/adminStorydlt/{{_id}}"><i  class="fa fa-trash-o" aria-hidden="true"></i></a></td>
                  </tr>
                  {{/each}}
                </tbody>
              </table>
            </section>
          </div>
          <div class="col-sm-6">
            <section class="panel">
              <header class="panel-heading">
                Public Stories
              </header>
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>Story</th>
                    <th>Creator</th>
                    <th>Likes</th>
                    <th>Comments</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                  {{#each publicStories}}
                  <tr>
                    <td>{{storyText}}</td>
                    <td>{{_creatorName}}</td>
                    <td><li class="fa fa-thumbs-up"></li> {{likes}}</td>
                    <td>{{commentCount}} <a href="admincomment/{{_id}}"><i class="fa fa-comment" aria-hidden="true"></i></a></td>
                    <td><a class="btn btn-danger" href="/adminStorydlt/{{_id}}"><i  class="fa fa-trash-o" aria-hidden="true"></i></a></td>
                  </tr>
                  {{/each}}
                </tbody>
              </table>
            </section>
          </div>
        </div>
        
        <!-- page end-->
      </section>
    </section>
 {{> footer}}