
{{> header}}
    <!--sidebar start-->
{{> adminNav}}
    <!--sidebar end-->

    <!--main content start-->
    <section id="main-content">
      <section class="wrapper">
        <div class="row">
          <div class="col-lg-12">
            <h3 class="page-header"><i class="fa fa-users"></i> {{user.username}} you can Manage Users from Here :</h3>
            <ol class="breadcrumb">
              {{!-- <li><i class="fa fa-home"></i><a href="index.html">Home</a></li>
              <li><i class="fa fa-table"></i>Table</li>
              <li><i class="fa fa-th-list"></i>Basic Table</li> --}}
            </ol>
          </div>
        </div>
        <!-- page start-->
        
         <div class="row">
          <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
            <div class="info-box blue-bg">
              <i class="fa fa-users"></i>
              <div class="count">{{userCount}}</div>
              <div class="title">Total User</div>
            </div>
            <!--/.info-box-->
          </div>
          <!--/.col-->        
        </div>

        <div class="row">
          <div class="col-lg-12">
            <section class="panel">
              <header class="panel-heading">
                All User
              </header>

              <table class="table table-striped table-advance table-hover">
                <tbody>
                  
                  <tr>
                    <th><i class="icon_profile"></i> Full Name</th>
                    {{!-- <th><i class="icon_calendar"></i> Date</th> --}}
                    <th><i class="icon_mail_alt"></i> Email</th>
                    <th><i class="fa fa-lock" aria-hidden="true">&nbsp;</i>Status</th>
                    {{!-- <th><i class="icon_mobile"></i> Mobile</th> --}}
                    <th><i class="icon_cogs"></i> Action</th>
                  </tr>
                  {{#each userDetail}}
                  <tr>                   
                    <td>{{username}}</td>
                    <td>{{email}}</td>
                    <td>
                       {{#if isblocked }}
                              <a class="btn btn-danger " id="unblock_the_user" href="unblockuser/{{_id}}"><i  class="fa fa-lock" aria-hidden="true"></i></a>
                        {{else}}
                              <a class="btn btn-success" id="block_the_user" href="blockuser/{{_id}}"><i  class="fa fa-unlock" aria-hidden="true"></i></a>
                        {{/if}}
                    </td>
                    <td>
                      <div class="btn-group">
                        <a class="btn btn-primary" href="updateuser/{{_id}}"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                        {{!-- <button  class="btn btn-danger ; fa fa-trash-o" aria-hidden="true" onclick="myFunction()"></button> --}}
                        <a class="btn btn-danger" href="deleteuser/{{_id}}"><i  class="fa fa-trash-o" aria-hidden="true"></i></a>

                      </div>
                    </td>
                    
                  </tr>
                  {{/each}}
                 
                </tbody>
              </table>
            </section>
          </div>
        </div>
        <!-- page end-->
      </section>
    </section>
 {{> footer}}